{% extends 'base.html.twig' %}

{% block title %}Transformers{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form method="post">
        <label for="capitaliser">Xbox live username transformer:</label>
        <input type="text" id="capitaliser" name ="capitaliser">
        <br>
        <label for="dasher">Spaces to dashes:</label>
        <input type="text" id="dasher" name="dasher">
        <button type="submit">GO</button>
    </form>

    <p>{{ outputCapitals }}</p>
    <p>{{ outputDashes }}</p>
</div>
{% endblock %}
